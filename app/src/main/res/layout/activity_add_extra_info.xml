<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorSignInActivityBackground"
        tools:context=".upload.AddExtraInfoActivity">


    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryDark"
            android:theme="@style/AppTheme.ActionBar"
            app:titleTextColor="@color/colorWhite"
            android:minHeight="?attr/actionBarSize" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:id="@+id/toolbarExtra"
            android:layout_marginTop="0dp"/>
    <EditText
            android:layout_below="@id/textView"
            android:layout_margin="15dp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:paddingBottom="80dp"
            android:layout_height="200dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/writeSms"
            android:layout_marginTop="80dp"
            android:hint="@string/writeMessage"
            android:gravity="top"
            android:layout_marginStart="80dp" android:layout_marginEnd="80dp" android:layout_marginBottom="80dp"/>

    <Button
            android:id="@+id/sendMessage"
            android:layout_width="320dp"
            android:enabled="false"
            android:layout_height="60dp"
            android:layout_below="@id/writeSms"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="6dp"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:text="@string/sendMessage"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_background"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="74dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000"
            android:text="Write Additional Info"
            android:layout_alignParentTop="true"/>

</RelativeLayout>